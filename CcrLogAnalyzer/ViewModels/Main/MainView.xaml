<UserControl x:Class="CcrLogAnalyzer.ViewModels.Main.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CcrLogAnalyzer.ViewModels.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barra superior -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0" HorizontalAlignment="Center">
            <TextBox x:Name="textbox" Width="300" FontSize="16" 
                     VerticalAlignment="Center" HorizontalAlignment="Center"
                     Text="{Binding BrowsePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Content="Buscar" 
                    Command="{Binding BrowseCommand}" 
                    FontSize="16" Margin="10,0,0,0"/>

            <ComboBox x:Name="ComboBox_Archivo" ItemsSource="{Binding ComboOptions}" 
                      SelectedItem="{Binding SelectedOption}"
                      Width="150" FontSize="14" Margin="10,0,0,0"/>
            <ComboBox x:Name="ComboBox_historial" ItemsSource="{Binding ConfigHistory}" 
                      DisplayMemberPath="DisplayText"
                      SelectedItem="{Binding SelectedConfig}"
                      Width="250" FontSize="14" Margin="10,0,0,0"
                      ToolTip="Selecciona una configuración anterior"/>

        </StackPanel>

        <!-- TabControl con pestañas -->
        <TabControl Grid.Row="1" Margin="0,10,0,10">
            <TabItem Header="Resumen">
                <DataGrid x:Name="Datagrid_Resumen"
              AutoGenerateColumns="False"
              ItemsSource="{Binding LogFileEventCounts}"
              SelectedItem="{Binding SelectedLog, Mode=TwoWay}"
              FontSize="14"
              HeadersVisibility="Column"
              Margin="6">

                    <DataGrid.Columns>

                        <!-- Nombre del archivo -->
                        <DataGridTextColumn Header="LogName"
                                Binding="{Binding NameLog}" />

                        <!-- Número de eventos -->
                        <DataGridTextColumn Header="Events"
                                Binding="{Binding EventCount}" />

                        <!-- Tipo de evento -->
                        <DataGridTextColumn Header="TypeEvent"
                                Binding="{Binding EventType}" />

                        <!-- Contenido de la línea (si filtras) -->
                        <DataGridTextColumn Header="LineContent"
                                Binding="{Binding LineContent}" 
                                Width="*" />
                     

                    </DataGrid.Columns>

                </DataGrid>
            </TabItem>



            <!-- Pestaña Detalles: muestra info del elemento seleccionado -->
            <TabItem Header="Detalles">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Panel de información -->
                    <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                        <TextBlock Text="Información del archivo seleccionado" FontWeight="Bold"/>

                        <TextBlock Text="{Binding SelectedLog.NameLog, StringFormat='Nombre: {0}'}"/>
                        <TextBlock Text="{Binding SelectedLog.FilePath, StringFormat='Ruta: {0}'}"/>
                        <TextBlock Text="{Binding SelectedLog.EventType, StringFormat='Tipo de evento: {0}'}"/>
                        <TextBlock Text="{Binding SelectedLog.EventCount, StringFormat='Total de eventos: {0}'}"/>

                        <!-- Mostrar la línea cuando hay filtrado -->
                        <TextBlock Text="{Binding SelectedLog.LineContent, StringFormat='Línea seleccionada: {0}'}"
                       TextWrapping="Wrap"
                       Visibility="{Binding SelectedLog.LineContent}"/>
                    </StackPanel>

                    <!-- Vista previa -->
                    <ScrollViewer Grid.Row="1">
                        <TextBlock Text="{Binding FilePreviewContent}" 
                       FontFamily="Consolas" 
                       TextWrapping="Wrap" />
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Pestaña Vista previa: muestra el contenido del archivo selecionado sin filtrar -->
            <TabItem Header="Vista previa">
                <Grid Margin="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding FilePreviewContent}" 
                     FontFamily="Consolas"
                     FontSize="13"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     TextWrapping="NoWrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     Background="#111"
                     Foreground="White"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>

        </TabControl>

        <!-- Panel inferior: filtro por tiempo -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock Text="Filtrar desde:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="Text_Inicio" Width="100" Text="{Binding StartTime}" Margin="5" ToolTip="Ej: 0:0:0:440"/>

            <TextBlock Text="hasta:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="Text_Fin" Width="100" Text="{Binding EndTime}" Margin="5" ToolTip="Ej: 0:0:1:000"/>

            <Button Content="Filtrar" Command="{Binding FilterCommand}" FontSize="14" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
